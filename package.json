{
  "name": "@xstream/webos-luna",
  "version": "1.0.0",
  "description": "TypeScript wrapper library for LG webOS TV Luna Services",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/caltek/lg-webos-wrapper.git"
  },
  "bugs": {
    "url": "https://github.com/caltek/lg-webos-wrapper/issues"
  },
  "homepage": "https://github.com/caltek/lg-webos-wrapper#readme",
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "vite",
    "build": "rm -rf dist && tsc -p tsconfig.build.json && vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "webos",
    "lg",
    "tv",
    "luna",
    "smart-tv",
    "wrapper"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "~5.9.3",
    "vite": "^7.1.7"
  },
  "dependencies": {}
}
